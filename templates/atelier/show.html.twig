{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <h1>Atelier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atelier.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ atelier.libelle }}</td>
            </tr>
            <tr>
                <th>NbPlaceMaxi</th>
                <td>{{ atelier.nbPlaceMaxi }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <h1> Themes </h1>
        {% for theme in atelier.themes %}

            <tbody>
                <tr>
                    <th>{{ theme.id }}</th>
                    <td>{{ theme.libelle }}</td>
                </tr>
            </tbody>
        {% endfor %}
    </table>

    <a href="{{ path('app_atelier_index') }}">back to list</a>

    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}">edit</a>

    {{ include('atelier/_delete_form.html.twig') }}
{% endblock %}
