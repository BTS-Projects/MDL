{% extends "base.html.twig" %}
{% block title %} Formulaire création d'un atelier{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-2" id="some-custom-id">
            {{ form_label(form.libelle, 'Libelle') }}
            {{ form_widget(form.libelle, {'attr' : {'placeholder' : "Saisir le libellé de l'atelier"}}) }}
        </div>
        <div class="col-8" id="some-custom-id">
            {{ form_label(form.nbPlaceMaxi, 'Nombre de places') }}
            {{ form_widget(form.nbPlaceMaxi, {'attr' : {'placeholder' : "Entre le nombre de place maximum"}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-4" id="some-custom-id">
            {{ form_label(form.themes, 'Themes associées') }}
            {{ form_widget(form.themes) }}
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-success"> Créer </button>
    {{ form_end(form) }}
{% endblock %}