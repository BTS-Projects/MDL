{% extends 'base.html.twig' %}
{% block title %} Page de login{% endblock %}
{% block body %}
    <div class="formulaire">
    <h1 class="d-flex justify-content-center">Connexion</h1>
    
        <form action="{{ path('connexion_login') }}" method="post">
            <div class="d-flex justify-content-center">
                <input placeholder="Adresse email ..." required name="_username"
                       type="text">
            </div>
            <div class="d-flex justify-content-center">
                <input placeholder="Mot de passe" type="password" required name="_password">
            </div>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}