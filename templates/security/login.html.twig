{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        {% if app.user %}
            {% if is_granted("ROLE_INSCRIT")%}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.licencie.nom }} {{ app.user.licencie.prenom }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% else %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.email }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}
        {% endif %}



        <h1 class="h3 mb-3 font-weight-normal" id="alignetitre">Connexion</h1>
        <label class="alignetexte" for="inputIdentifiant">Numéro de Licence ou Adresse Email</label>
        <input type="text" value="{{ last_username }}" name="identifiant" id="inputIdentifiant" class="form-control inputLogin" autocomplete="username" required autofocus>

        <label class="alignetexte" for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control inputLogin" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
               >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
    
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit" id="alignebouton">
            Sign in
        </button>
        <a href="{{ path('app_forgot_password_request') }}"> Mot de passe oublié </a>
    </form>
{% endblock %}
