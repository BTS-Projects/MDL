{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center"> Du samedi 17 au dimanche 18 septembre 2022</h1>
    <h3 id="presentation-atelier"Presentation des ateliers></h3>
        {% for ateliers in lesAteliers %}
            <table class="table table-dark table-striped ">
                <thead>
                    <tr>{{ ateliers.getLibelle }}</tr>
                </thead>
            <tr>
            </tr>
            <tr>
            <p>Nombre de places maximale : {{ ateliers.nbPlaceMaxi }}
            </tr>
            </table>
